{$APPTYPE CONSOLE}
  uses Windows, Sysutils;
const n=20;
 type TArray= array [1..n] of integer;

var A:TArray ;
var tmp,i,j: Integer;
procedure ShellSort(var A: TArray; max: Integer);
var t,k,i,j,tmp,m:integer;
begin
  Comp:= 0;
  Perm:= 0;
  t := Trunc(Ln(Size) / Ln(2)) - 1;
  //writeln('t = ', t);
  for i:=1 to t do
  begin
    // Writeln('t= ',t+1-i);
    k:= (1 shl (t+1-i)) - 1;
    // Writeln(k);
    for j:=(k + 1) to Size do
    begin
      tmp:=SA[j];
      m:=j-k;
      While((m>=1) and (SA[m] > tmp)) do
      begin
        SA[M+k] := SA[m];
        m:=m-k;
        Inc(Comp);
        Inc(steps);
      end;
      SA[m+k] := tmp;
      Inc(Comp);
      //Inc(Perm);
    end;
  end;
end;

procedure InsertionSort(var A: TArray; max: Integer);
var i,j,tmp,Steps,Comp:integer;
begin
Steps:=0;
Comparisons;
for i:=2 to max do
  begin
  tmp:=A[i];
  j:=i;
    While ((j>1) and   (A[j-1]>tmp)) do
     begin
     inc(steps);
     inc(Comp);
      A[j]:=A[j-1];
      dec(j);
      end;
  A[j]:=tmp;
   inc(steps);
 end;
 output(steps,comp,max);
 writeln('Количество Элементов: ',max) ;
  writeln('Сравнения: ',Comp) ;
 writeln('Перестановки: ',Steps);
end;
procedure reverse(var A: TArray; max: Integer);
var i,j,tmp:integer;
begin
i:=0;
j:=10;
for i:=1 to (max div 2) do
begin
tmp:=A[i];
A[i]:=A[j];
A[j]:=tmp;
dec(j);
end;

end;
procedure output (var: steps,comp,max:integer);
begin
 writeln('Количество Элементов: ',max) ;
  writeln('Сравнения: ',Comp) ;
 writeln('Перестановки: ',Steps);
end;

begin
 SetConsoleOutputCP(1251);
SetConsoleCP(1251);
  Randomize;
for i:=1 to 10 do
  begin
    A[i]:=random(100);
    write(A[i],' ');
  end;
InsertionSort(A,10);
ShellSort(A,10)
 for i:=1 to 10 do
    write(A[i],' ');
reverse(A,10);
writeln;
//for i:= 1 to 10 do write(A[i],' ');
 for i:=1 to 10 do
    write(A[i],' ');
InsertionSort(A,10);
InsertionSort(A,10);
readln;
end.
